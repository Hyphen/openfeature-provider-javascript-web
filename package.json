{
  "name": "@hyphen/openfeature-web-provider",
  "version": "1.0.3",
  "description": "The official Hyphen Toggle OpenFeature Web Provider",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "test": "vitest --coverage --run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hyphen/openfeature-provider-javascript-web.git"
  },
  "keywords": [
    "toggle",
    "openfeature",
    "provider",
    "hyphen",
    "web"
  ],
  "author": "@hyphen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Hyphen/openfeature-provider-javascript-web/issues"
  },
  "homepage": "https://github.com/Hyphen/openfeature-provider-javascript-web#readme",
  "dependencies": {
    "lscache": "^1.3.2",
    "object-hash": "^3.0.0"
  },
  "peerDependencies": {
    "@openfeature/web-sdk": "^1.3.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/lscache": "^1.3.4",
    "@types/object-hash": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitest/coverage-istanbul": "^2.1.8",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "semantic-release": "^24.2.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json*"
          ],
          "message": "chore(release): set `package.json` to ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
